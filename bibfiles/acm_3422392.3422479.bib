@inproceedings{10.1145/3472714.3473906,
author = {B. F. Carvalho, Darlinton and Gabrielle dos Santos Barbosa, Carolaine and Luiz de Souza, Celso and Haddad Borges, Mayara},
title = {Performing Virtual Events During COVID-19 Pandemics: The Case of the Startups Fair and Hackathon for New Educational Technologies in the Campo Das Vertentes Region in Brazil},
